<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3.Views.Acceso.LoginPage"
             Title="Login">
    <Frame>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="50">
            <Entry Placeholder="Usuario" x:Name="txtemail" Margin="10"/>
            <Entry Placeholder="Contraseña" IsPassword="True" x:Name="txtclave"  Margin="10"/>
            <Button Text="Iniciar Sesión" x:Name="Login" Clicked="Login_clicked" Margin="10" CornerRadius="10"/>
        </StackLayout>
    </Frame>
</ContentPage>